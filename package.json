    "@testcontainers/postgresql": "^11.4.0",
    "@testcontainers/redis": "^11.4.0",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^30.0.5",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.2.2",
    "husky": "^9.0.11",
    "ioredis": "^5.6.1",
    "jest": "^29.7.0",
