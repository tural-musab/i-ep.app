{
  "name": "i-ep-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "vercel-build": "npm install --legacy-peer-deps && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "npm run test:ci && npm run lint && npm run format:check",
    "test": "jest",
    "test:smoke": "jest --testPathPattern=\"(smoke|critical)\" --maxWorkers=100%",
    "test:unit": "jest --testPathPattern=\"-unit\\.test\\.ts$\" --maxWorkers=50%",
    "test:unit-fast": "jest --selectProjects unit --maxWorkers=100% --testTimeout=5000",
    "test:integration": "source .env.test && jest --selectProjects integration --runInBand",
    "test:security": "jest --testPathPattern=\"security\" --testPathIgnorePatterns=\"quarantine\" --maxWorkers=1",
    "test:flaky": "jest --testPathPattern=\"flaky\" --retries=3",
    "test:watch": "jest --watch --testPathPattern=\"-unit\\.test\\.ts$\"",
    "test:coverage": "jest --coverage --testPathPattern=\"-unit\\.test\\.ts$\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:demo": "node scripts/local-demo-testing/comprehensive-test-runner.js",
    "build:analyze": "ANALYZE=true npm run build",
    "performance:test": "npm run build && npm run test:e2e -- --grep performance",
    "doc:status": "node scripts/tracking/generate-dashboard.js",
    "doc:sync": "node scripts/tracking/sync-sources.js",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:status": "npx supabase status",
    "supabase:reset": "npx supabase db reset --local",
    "supabase:push": "npx supabase db push",
    "demo:setup": "chmod +x scripts/local-demo-testing/setup-local-demo-environment.sh && ./scripts/local-demo-testing/setup-local-demo-environment.sh",
    "demo:seed": "node scripts/local-demo-testing/seed-turkish-demo-content.js",
    "demo:users": "node scripts/local-demo-testing/create-local-demo-users.js",
    "demo:test": "node scripts/local-demo-testing/comprehensive-test-runner.js",
    "demo:report": "node scripts/local-demo-testing/generate-test-report.js",
    "demo:cleanup": "node scripts/local-demo-testing/create-local-demo-users.js cleanup",
    "production:deploy": "node scripts/deploy-production-demo.sh",
    "validate:env": "node -e \"console.log('✅ Environment validation placeholder - TODO: implement proper validation')\"",
    "test:ci": "jest --ci --coverage --selectProjects unit --maxWorkers=2",
    "test:quality": "node test-utils/quality-dashboard.js",
    "test:report": "npm run test:unit && npm run test:quality",
    "test:monitor": "npm run test:unit && node test-utils/flaky-test-handler.js"
  },
  "dependencies": {
    "@auth/supabase-adapter": "^0.6.1",
