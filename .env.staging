# Uygulama Ayarları
NEXT_PUBLIC_APP_NAME=Iqra Eğitim Portalı (Staging)
NEXT_PUBLIC_APP_URL=https://staging.i-ep.app
NODE_ENV=staging

# Supabase Bağlantısı - Staging Ortamı
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# NextAuth Ayarları
NEXTAUTH_URL=https://staging.i-ep.app
NEXTAUTH_SECRET=your-secure-staging-auth-secret

# Multi-tenant Ayarları
NEXT_PUBLIC_TENANT_DOMAIN=staging.i-ep.app
NEXT_PUBLIC_ADMIN_DOMAIN=admin.staging.i-ep.app
NEXT_PUBLIC_BASE_DOMAIN=staging.i-ep.app
ENABLE_DOMAIN_MANAGEMENT=true

# Email Servis Ayarları - Staging
EMAIL_SERVER_HOST=smtp.sendgrid.net
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=apikey
EMAIL_SERVER_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@staging.i-ep.app

# Cloudflare Ayarları
CLOUDFLARE_API_TOKEN=your-cloudflare-staging-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Staging Ayarları
DEBUG=true
ENABLE_MOCK_SERVICES=false
DISABLE_RATE_LIMITING=true

# Performans ve Güvenlik
EDGE_CACHE_TTL=60
CONTENT_SECURITY_POLICY=true
NEXT_TELEMETRY_DISABLED=1 