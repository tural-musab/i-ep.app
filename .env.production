# Uygulama Ayarları
NEXT_PUBLIC_APP_NAME=Iqra Eğitim Portalı
NEXT_PUBLIC_APP_URL=https://i-ep.app
NODE_ENV=production

# Supabase Bağlantısı - Üretim Ortamı
NEXT_PUBLIC_SUPABASE_URL=https://your-production-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# NextAuth Ayarları
NEXTAUTH_URL=https://i-ep.app
NEXTAUTH_SECRET=your-secure-production-auth-secret

# Multi-tenant Ayarları
NEXT_PUBLIC_TENANT_DOMAIN=i-ep.app
NEXT_PUBLIC_ADMIN_DOMAIN=admin.i-ep.app

# Email Servis Ayarları - Üretim
EMAIL_SERVER_HOST=smtp.sendgrid.net
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=apikey
EMAIL_SERVER_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@i-ep.app

# Cloudflare Ayarları
CLOUDFLARE_API_TOKEN=your-cloudflare-production-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Üretim Ayarları
DEBUG=false
ENABLE_MOCK_SERVICES=false
DISABLE_RATE_LIMITING=false

# Performans ve Güvenlik
EDGE_CACHE_TTL=3600
CONTENT_SECURITY_POLICY=true
NEXT_TELEMETRY_DISABLED=1


NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Iqra Eğitim Portalı
NEXT_PUBLIC_APP_URL=https://i-ep.app
NEXTAUTH_URL=https://i-ep.app
NEXT_PUBLIC_TENANT_DOMAIN=i-ep.app
NEXT_PUBLIC_ADMIN_DOMAIN=admin.i-ep.app
NEXT_PUBLIC_BASE_DOMAIN=i-ep.app
ENABLE_DOMAIN_MANAGEMENT=true