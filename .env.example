# İ-EP.APP Environment Variables Template
# Bu dosyayı kopyalayıp .env.local olarak adlandırın

# TEMEL UYGULAMA AYARLARI
NEXT_PUBLIC_APP_NAME="İ-EP.APP"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DOMAIN="i-ep.app"
NODE_ENV="development"

# SUPABASE AYARLARI
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# NEXTAUTH.JS
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-characters"

# REDIS
UPSTASH_REDIS_URL="https://your-redis-name.upstash.io"
UPSTASH_REDIS_TOKEN="your-redis-token"

# EMAIL SERVICES
EMAIL_SERVER_HOST="your-email-host"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@your-domain.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@your-domain.com"

# CLOUDFLARE
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="your-zone-id"
CLOUDFLARE_EMAIL="admin@your-domain.com"

# Vercel Deployment (CI/CD only - add to GitHub Secrets)
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# SENTRY
SENTRY_DSN="https://your-key@o123456.ingest.sentry.io/123456"

# Sentry Error Tracking
SENTRY_AUTH_TOKEN=your-sentry-token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# Code Coverage
CODECOV_TOKEN=your-codecov-token

# PERFORMANCE & LOGGING
LOG_LEVEL="info"
RATE_LIMIT_WINDOW_MS="60000"  # 1 minute in milliseconds
RATE_LIMIT_MAX="100"          # Maximum requests per window per tenant
