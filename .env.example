# Uygulama Ayarları
NEXT_PUBLIC_APP_NAME=Iqra Eğitim Portalı
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Supabase Bağlantısı
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret-at-least-32-chars-long

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/iqra_edu

# PostgreSQL Configuration
POSTGRES_URL=postgres://postgres:password@localhost:5432/iqra_edu
POSTGRES_PRISMA_URL=postgres://postgres:password@localhost:5432/iqra_edu?pgbouncer=true
POSTGRES_URL_NON_POOLING=postgres://postgres:password@localhost:5432/iqra_edu
POSTGRES_USER=postgres
POSTGRES_HOST=localhost
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=iqra_edu

# NextAuth Ayarları
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-auth-secret

# Multi-tenant Ayarları
NEXT_PUBLIC_TENANT_DOMAIN=i-ep.app
NEXT_PUBLIC_ADMIN_DOMAIN=admin.i-ep.app
NEXT_PUBLIC_BASE_DOMAIN=i-ep.app
ENABLE_DOMAIN_MANAGEMENT=true

# Email Servis Ayarları
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=user@example.com
EMAIL_SERVER_PASSWORD=your-password
EMAIL_FROM=noreply@i-ep.app

# Cloudflare Ayarları (Özel Domainler için)
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_EMAIL=your-cloudflare-account@example.com