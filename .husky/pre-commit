#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit quality checks
echo "ğŸ” Running pre-commit checks..."

# TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type errors found. Please fix them before committing."
  exit 1
fi

# ESLint
echo "ğŸ§¹ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint errors found. Run 'npm run lint:fix' to auto-fix some issues."
  exit 1
fi

# Prettier format check
echo "ğŸ’… Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Run 'npm run format' to fix."
  exit 1
fi

# Unit tests
echo "ğŸ§ª Running unit tests..."
npm run test:unit-fast
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
