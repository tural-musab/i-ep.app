#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit quality checks
echo "🔍 Running pre-commit checks..."

# TypeScript type checking
echo "📝 Checking TypeScript types..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "❌ TypeScript type errors found. Please fix them before committing."
  exit 1
fi

# ESLint
echo "🧹 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint errors found. Run 'npm run lint:fix' to auto-fix some issues."
  exit 1
fi

# Prettier format check
echo "💅 Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Code formatting issues found. Run 'npm run format' to fix."
  exit 1
fi

# Unit tests
echo "🧪 Running unit tests..."
npm run test:unit-fast
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "✅ All pre-commit checks passed!"
